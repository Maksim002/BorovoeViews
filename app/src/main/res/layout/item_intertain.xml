<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/intertainment_imageview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/banya"/>

    <ImageView
        android:id="@+id/intertainment_drawable"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/ic_bucket"
        app:layout_constraintBottom_toBottomOf="@id/intertainment_textview"
        app:layout_constraintEnd_toStartOf="@id/intertainment_textview" />

    <TextView
        android:id="@+id/intertainment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/intertainment_imageview"
        app:layout_constraintEnd_toEndOf="@id/intertainment_imageview"
        tools:text="Русская баня"/>

</androidx.constraintlayout.widget.ConstraintLayout>