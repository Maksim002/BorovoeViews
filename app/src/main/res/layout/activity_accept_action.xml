<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.BookingAcceptAction">

    <TextView
        android:id="@+id/accept_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginTop="24dp"
        android:text="Подтвердите действие"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/accept_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintCircleRadius="3dp"
        app:layout_constraintStart_toStartOf="@id/accept_textview"
        app:layout_constraintTop_toBottomOf="@id/accept_textview">

        <ImageView
            android:id="@+id/accept_imageview"
            android:layout_width="84dp"
            android:layout_height="56dp"
            android:background="@drawable/banya"
            app:layout_constraintStart_toStartOf="@id/accept_textview"
            app:layout_constraintTop_toBottomOf="@id/accept_textview" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/accept_title_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:text="Гостиничный номер \n в ОРК Discont - Borovoe"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/accept_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/accept_cardview"
        app:layout_constraintTop_toTopOf="@id/accept_cardview" />


    <View
        android:id="@+id/accept_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/horizontalMargin"
        android:layout_marginTop="16dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accept_cardview" />

    <TextView
        android:id="@+id/accept_period_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Период проживания"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/accept_divider"
        app:layout_constraintTop_toBottomOf="@id/accept_divider" />

    <TextView
        android:id="@+id/accept_count_adults_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Количество взрослых"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/accept_period_static"
        app:layout_constraintTop_toBottomOf="@id/accept_period_static" />


    <TextView
        android:id="@+id/accept_count_children_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Количество детей"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/accept_count_adults_static"
        app:layout_constraintTop_toBottomOf="@id/accept_count_adults_static" />


    <TextView
        android:id="@+id/accept_period_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.09 - 25.09.2019"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/accept_period_static"
        app:layout_constraintEnd_toEndOf="@id/accept_divider" />

    <TextView
        android:id="@+id/accept_count_adults_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/accept_count_adults_static"
        app:layout_constraintEnd_toEndOf="@id/accept_divider" />

    <TextView
        android:id="@+id/accept_count_children_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/accept_count_children_static"
        app:layout_constraintEnd_toEndOf="@id/accept_divider" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orange_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontalMargin"
        android:layout_marginTop="@dimen/horizontalMargin"
        android:background="@drawable/rounded_orange_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accept_count_children_static">

        <ImageView
            android:id="@+id/borovoe_icon_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_borovoe_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accept_cost_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="86 000 ₸"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/borovoe_icon_imageview"
            app:layout_constraintStart_toEndOf="@id/borovoe_icon_imageview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="к оплате"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/accept_cost_textview"
            app:layout_constraintTop_toTopOf="@id/borovoe_icon_imageview" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/accept_second_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orange_container" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="@dimen/horizontalMargin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_green_background"
        android:gravity="center"
        android:text="Оплатить"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accept_second_divider" />


</androidx.constraintlayout.widget.ConstraintLayout>