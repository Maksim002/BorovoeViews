<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rooms_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/ic_wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rooms_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/rooms_item_icon"
        app:layout_constraintStart_toEndOf="@id/rooms_item_icon"
        tools:text="Интернет" />

    <TextView
        android:id="@+id/rooms_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:gravity="top"
        android:lineSpacingExtra="6sp"
        android:paddingBottom="4dp"
        android:text="Wi-fi доступен по всему рекреационному комплексу"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="-3sp"
        app:layout_constraintStart_toStartOf="@id/rooms_item_title"
        app:layout_constraintTop_toBottomOf="@id/rooms_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>